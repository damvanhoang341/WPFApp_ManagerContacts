<Window x:Class="AppWPF.CreateGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppWPF"
        mc:Ignorable="d"
        Title="CreateGroup" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Create Group" FontSize="20" Foreground="Aqua" Grid.Row="0" FontWeight="Bold"/>
        <WrapPanel Grid.Row="1">
            <Label Content="Group"/>
            <TextBox x:Name="txtGroup" Width="200" Margin="28 0 0 0"/>
        </WrapPanel>
        <WrapPanel Grid.Row="2">
            <Label Content="Description"/>
            <TextBox x:Name="txtDes" Width="200"/>
        </WrapPanel>
        <Button Content="Add" Name="btnAdd" Click="btnAdd_Click" Grid.Row="3" Height="30" Width="100" Background="Red"/>
    </Grid>
</Window>
