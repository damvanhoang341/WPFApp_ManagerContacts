<Window x:Class="AppWPF.AddContactGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppWPF"
        mc:Ignorable="d"
        Title="AddContactGroup" Height="230" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Add Contact Group" FontSize="20" FontWeight="Bold" Foreground="Aqua" Grid.Row="0"/>
        <WrapPanel Grid.Row="1" Margin="10">
            <Label Content="Choose Group"/>
            <ComboBox Name="cboGroup" Width="200" Height="30"/>
        </WrapPanel>
        <Button Name="btnAdd" Content="Add" Width="80" Height="30" Background="Red" Click="btnAdd_Click" Grid.Row="2"/>
    </Grid>
</Window>
