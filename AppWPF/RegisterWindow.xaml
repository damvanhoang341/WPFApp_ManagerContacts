<Window x:Class="AppWPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppWPF"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Registory" FontSize="25" Foreground="Aqua" FontWeight="Bold"/>
            <WrapPanel Margin="10">
                <Label Content="Full Name: "/>
                <TextBox Name="txtFullName" Width="300" Margin="30 0 0 0"/>
            </WrapPanel>
        </StackPanel>
        <WrapPanel Grid.Row="1" Margin="10">
            <Label Content="User Name: "/>
            <TextBox Name="txtUser" Width="300" Margin="25 0 0 0"/>
        </WrapPanel>
        <WrapPanel Grid.Row="2" Margin="10">
            <Label Content="Password: "/>
            <PasswordBox Name="pbPassword" Width="300" Margin="34 0 0 0"/>
        </WrapPanel>
        <WrapPanel Grid.Row="3" Margin="10">
            <Label Content="Email: "/>
            <TextBox Name="txtEmail" Width="300" Margin="56 0 0 0"/>
        </WrapPanel>
        <WrapPanel Grid.Row="4" Margin="10">
            <Label Content="Phone: "/>
            <TextBox Name="txtPhone" Width="300" Margin="50 0 0 0"/>
        </WrapPanel>
        <Button Name="btnAdd" Content="Create an account" Click="btnAdd_Click" Grid.Row="5" Width="130" Height="30" Background="Red" Margin="20"/>
    </Grid>
</Window>
